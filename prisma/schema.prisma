generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Account {
  id        String     @id @default(uuid())
  number    Int        @unique
  balance   Float
  createdAt DateTime   @default(now())

  transfersFrom Transfer[] @relation("sourceTransfers")
  transfersTo   Transfer[] @relation("destinationTransfers")
}

model Transfer {
  id                   String     @id @default(uuid())
  source_account       Int
  destination_account  Int
  amount               Float
  created_by           String
  created_at           DateTime @default(now())

  sourceAccount      Account @relation("sourceTransfers", fields: [source_account], references: [number], onDelete: NoAction, onUpdate: NoAction)
  destinationAccount Account @relation("destinationTransfers", fields: [destination_account], references: [number], onDelete: NoAction, onUpdate: NoAction)
}